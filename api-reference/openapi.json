{
  "openapi": "3.1.0",
  "info": {
    "title": "Stellium Fast Transaction Landing API",
    "description": "API for submitting transactions to Solana through Stellium's optimized transaction landing service",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://STELLIUM_ENDPOINT"
    }
  ],
  "security": [
    {
      "apiKeyQuery": []
    }
  ],
  "paths": {
    "/fast": {
      "post": {
        "description": "Submit a transaction to Solana network through Stellium's optimized transaction landing service",
        "requestBody": {
          "description": "JSON-RPC request for sendTransaction",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transaction submitted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendTransactionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SendTransactionRequest": {
        "type": "object",
        "required": ["jsonrpc", "id", "method", "params"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "description": "JSON-RPC version",
            "default": "2.0"
          },
          "id": {
            "type": "string",
            "description": "Request identifier"
          },
          "method": {
            "type": "string",
            "description": "Method name",
            "default": "sendTransaction"
          },
          "params": {
            "type": "array",
            "description": "Parameters for sendTransaction",
            "prefixItems": [
              {
                "type": "string",
                "description": "Base64 encoded transaction",
                "example": "<base64_encoded_tx>"
              },
              {
                "type": "object",
                "properties": {
                  "encoding": {
                    "type": "string",
                    "description": "Transaction encoding format",
                    "default": "base64",
                    "enum": ["base64"]
                  }
                },
                "additionalProperties": false,
                "default": { "encoding": "base64" }
              }
            ],
            "items": false,
            "minItems": 2,
            "maxItems": 2
          }
        }
      },
      "SendTransactionResponse": {
        "type": "object",
        "required": ["jsonrpc", "id", "result"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "description": "JSON-RPC version",
            "default": "2.0"
          },
          "id": {
            "type": "string"
          },
          "result": {
            "type": "string",
            "description": "Transaction signature"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["jsonrpc", "id", "error"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "description": "JSON-RPC version",
            "default": "2.0"
          },
          "id": {
            "type": "string"
          },
          "error": {
            "type": "object",
            "required": ["code", "message"],
            "properties": {
              "code": {
                "type": "integer",
                "description": "Error code"
              },
              "message": {
                "type": "string",
                "description": "Error message"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyQuery": {
        "type": "apiKey",
        "in": "query",
        "name": "api-key"
      }
    }
  }
}